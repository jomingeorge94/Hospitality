<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@mipmap/background_colour">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView5"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/feedback_submit">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/settings_change_top_bar">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="500dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="30dp"
                        android:layout_height="31dp"
                        android:weightSum="1"
                        android:id="@+id/linearLayout"
                        android:background="@drawable/navigation_back"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send Feedback"
                        android:id="@+id/textView2"
                        android:layout_gravity="center_horizontal"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="7dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We greatly value your feedback to help us maintain our features to the best. You could make a real difference to our service and it would really help us understand what we have to do in order to give a better service to our customer.  "
                    android:id="@+id/textView32"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingscore"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/customer_feedback_name"
                    android:hint="Full Name"
                    android:background="#fff"
                    android:textColorHint="#000000"
                    android:maxLength="25"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="false"
                    android:password="false"
                    android:nestedScrollingEnabled="false"
                    android:textColor="#000000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/feedback_comment"
                    android:hint="Please enter your comment here"
                    android:textColorHint="#000000"
                    android:background="#fff"
                    android:lines="5"
                    android:maxLines="5"
                    android:maxLength="300"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="false"
                    android:password="false"
                    android:nestedScrollingEnabled="false"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/feedback_submit"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:background="#ffcacaca"
        android:textColor="#ffffff" />


</RelativeLayout>
